<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rjgoo.recentrify.Home_Fragment"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/top_half"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:src="@drawable/meter2" />

    <LinearLayout
        android:id="@+id/bottom_half"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/top_half"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_stats"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_bar_chart_24px"
            android:text="@string/stats"
            android:textColor="@color/colorBlack"
            android:backgroundTint="@color/colorBlue"/>

        <Button
            android:id="@+id/b_pt"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="@string/physical_therapy"
            android:textColor="@color/colorBlack"
            android:backgroundTint="@color/colorLightGray"
            android:drawableTop="@drawable/physical_therapy"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_half2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/bottom_half"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_profile"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="@string/profile"
            android:textColor="@color/colorBlack"
            android:drawableTop="@drawable/profile"
            android:backgroundTint="@color/colorRed"/>

        <Button
            android:id="@+id/b_share"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorGreen"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="@string/share"
            android:textColor="@color/colorBlack"
            android:drawableTop="@drawable/share"/>

    </LinearLayout>

</RelativeLayout>

